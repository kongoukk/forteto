
<div class="row justify-content-center">
   <table class="table col-8">
      <thead>
          <tr>
             <th>name</th>
             <th></th>
             <th colspan="3"></th>
          </tr>
      </thead>


   <tbody>
    <% posts.each do |post| %>
       <tr>
        <td><%=  link_to post.title, post_path(post.id) %></td>
         <td><%= post.body %></td>
          <% if post.image.attached? %>
            <td><%= image_tag post.image, size: "150x150" %></td>
          <% else %>
            <td><img src="http://placehold.jp/150x150"></td>
          <% end %>
         <td>
          <ul>
          <li style="list-style: none;"><%= link_to tag.name, search_path(content: tag.name, model:"tag", method: "perfect") %></li>
          </ul>
         </td>
         <td class="<%= 'favorite-' + post.id.to_s %>" >
            <%= render "public/favorites/btn", post: post  %>
        </td>
      </tr>
      <% end %>

  </tbody>
  </table>
</div>


