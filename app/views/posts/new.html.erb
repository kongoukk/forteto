        <%= link_to post_new_path(current_user.id) do %>postnew
        <% end %>
      </div>
      <div class="col">
        <%= link_to post_index_path(current_user.id) do %>postindex
        <% end %>
       </div>
       <div class="col"><%= link_to post_path(current_user.id) do %>postshow
        <% end %>
       </div>
  </div>
    <div class="row">
      <div class="col">
        <%= link_to comments_index_path(current_user.id) do %>commentsindex
        <% end %>
      </div>
      <div class="col">
        <%= link_to comments_show_path(current_user.id) do %>commentsshow
        <% end %>
      </div>
      <div class="col">
        <%= link_to favorites_index_path(current_user.id) do %>favoritesindex
        <% end %>
