        <% end %>
      </div>
    </div>
  </div>


<div class="row justify-content-center">
<%= form_with model: @post, url: posts_path, method: :post do |f| %>
  <div>
    <%= f.label :title, "タイトル" %><br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body, "本文" %><br>
    <%= f.text_area :body %>
  </div>

  <div>
    <%= f.label :images, "画像" %><br>
    <%= f.file_field :image, accept: "image/*" %>
  </div>

  <div>
    <%= f.submit "投稿" %>
  </div>
 <% end %>
</div>

<div class="form-group form-group_tags">
  <%#= f.label :tag_list, "Tag", class: "form-label" %>
  <%#= f.text_field :tag_list, value: @post.tag_list.join(","), class: "form-control", data: { role: "tagsinput" } %>
</div>

